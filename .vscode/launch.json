{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "launchBrowser": {
                "enabled": true
            },
            "program": "${workspaceFolder}/bin/Debug/net5.0/EntertainHueSharp.dll",
            "args": [
                "-v",
                "--calibrate",
                "--ip=192.168.1.221",
                "--groupid=5",
                "-x 0.25",
                "-y 0.55",
                "-w 0.20",
                "-h 0.18"
            ],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}